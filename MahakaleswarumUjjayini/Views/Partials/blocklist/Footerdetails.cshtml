@using Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models;
@using Umbraco.Cms.Core.Models.Blocks;
@model Umbraco.Cms.Core.Models.PublishedContent.IPublishedContent

@{

    var footer = Model.Root().Children().FirstOrDefault(x => x.ContentType.Alias == "footer");
    var footercopyright = footer.Value<string>("footercopyright");
    var footerprivacy = footer.Value<Link>("footerprivacy");
    var footertermsandconditions = footer.Value<Link>("footertermsandconditions");
    var footerdevelopedbycodedream = footer.Value<Link>("footerdevelopedbycodedream");
    var footerlogosimage = footer.Value<BlockListModel>("footerlogosimage");
    var totalvisitors = footer.Value<string>("totalvisitors");
    var todaystotalvisitors = footer.Value<string>("todaystotalvisitors");
    var footerimages = footer.Value<MediaWithCrops>("footerimages");
    var locationdetails = footer.Value<MediaWithCrops>("locationdetails");
    var locationemail = footer.Value<string>("locationemail");
    var locationmap = footer.Value<string>("locationmap");
    var locationglobe = footer.Value<MediaWithCrops>("locationglobe");
    var templeimage = footer.Value<MediaWithCrops>("templeimage");
    var templefaximage = footer.Value<MediaWithCrops>("templefaximage");
    var templeurl = footer.Value<string>("templeurl");
    var templephonenumbers = footer.Value<string>("templephonenumbers");
    var templefaxnumber = footer.Value<string>("templefaxnumber");
    var header = Model.Root().Children().FirstOrDefault(x => x.ContentType.Alias == "headertop");
    var headermainmenuitems = header.Value<BlockListModel>("headermenuitemslist");

}







  <!-- footer area -->
<footer class="footer-area">
    <div class="footer-widget">
        <div class="container">
            <div class="row footer-widget-wrapper pt-100 pb-70">
                 @if (headermainmenuitems != null)
                    {
                    foreach (var item in headermainmenuitems)
                    {
                        var headercontent = item.Content;
                        var headermainmenu = headercontent.Value<Link>("navigationmainmemu");
                        var headersubmenulist = headercontent.Value<BlockListModel>("headersubmenulist");
                        <div class="col-md-6 col-lg-2">
                            <div class="footer-widget-box list">
                                <h4 class="footer-widget-title">@headermainmenu.Name</h4>
                                <ul class="footer-list">

                                    @if (headersubmenulist != null)
                                    {
                                        foreach (var items in headersubmenulist)
                                        {
                                            var headersubmenu = items.Content.Value<Link>("headersubmenulist");
                                            <li><a href="@headersubmenu.Url"><i class="fas fa-caret-right"></i> @headersubmenu.Name</a></li>
                                            
                                        }
                                    }

                                    
                                   
                                </ul>
                            </div>
                        </div>
                    }
                    }
                    </div>
        </div>
    </div>



    <style type="text/css">
        .sd-additional-footer {
            border-top: 1px solid #c0c3c7;
            border-bottom: 1px solid #c0c3c7;
            width: 93%;
            height: 19%;
            display: flex;
            justify-content: space-evenly;
            align-self: center;
            align-items: center;
        }

            .sd-additional-footer .left {
                width: 40%;
                height: 70%;
                text-align: left;
                display: flex;
                flex-direction: column;
                justify-content: center;
            }

                .sd-additional-footer .left p {
                    margin: 0;
                    font-size: 15px;
                    color: #181818;
                }

            .sd-additional-footer .sd-border-g {
                border-right: 1px solid #dcdcdc;
                border-left: 1px solid #dcdcdc;
            }

            .sd-additional-footer .middle {
                width: 35%;
                height: 70%;
                padding-left: 30px;
                text-align: left;
                display: flex;
                flex-direction: column;
                justify-content: center;
            }

            .sd-additional-footer .right {
                width: 25%;
                height: 70%;
                text-align: left;
                display: flex;
                flex-direction: column;
                justify-content: center;
                padding: 19px 19px 19px 30px;
            }

                .sd-additional-footer .right p {
                    margin: 0;
                    font-size: 15px;
                    color: #181818;
                }


        .sd-additional-footer {
            border-top: 1px solid #c0c3c7;
            border-bottom: 1px solid #c0c3c7;
            width: 93%;
            height: 19%;
            display: flex;
            justify-content: space-evenly;
            align-self: center;
            align-items: center;
        }

        .footer-area {
            background: #efefef !important;
            position: relative;
            z-index: 1;
        }


        .footer-widget-title {
            color: #2f3193;
            position: relative;
            padding-bottom: 20px;
            margin-bottom: 30px;
            font-size: 21px;
        }

            .footer-widget-title::before, .footer-widget-title::after, .footer-list li a i {
                display: none;
            }

        .footer-widget-title {
            margin-bottom: 0px;
        }

        .footer-list li a {
            color: #181818;
            font-size: 14px;
        }

        .sd-additional-footer .left p img {
            height: 15px;
            margin-right: 10px;
        }

        .sd-footer-middle .sd-footer-middle-f .sd-additional-footer .left p img {
            height: 15px;
            margin-right: 10px;
        }

        img.sep {
            height: 15px;
            margin-right: 10px;
        }

        .right p img {
            height: 13px;
            margin-right: 10px;
        }

    </style>



    <div class="sd-additional-footer container">
        <div class="left">
            @Html.Raw(locationmap)
        </div>
        <div class="middle sd-border-g">
            <p><img src="@locationdetails.MediaUrl()" alt="mail" class="sep">@locationemail</p>
            <p><img src="@locationglobe.MediaUrl()" alt="mail" class="sep">@templeurl</p>
        </div>
        <div class="right">
            <p>
                <img src="@templeimage.MediaUrl()" alt="number"> @templephonenumbers
            </p>
            <p>
                <img src="@templefaximage.MediaUrl()" alt="print"> @templefaxnumber
            </p>
        </div>


    </div>





    <style type="text/css">

        .sd-visitors {
            position: unset;
            width: 93.5%;
            align-self: center;
            padding-top: 40px;
