                    }

        .sd-footer-tag {
            height: 60px;
            padding: 0 60px;
            display: flex;
            align-items: center;
            background-color: #fff;
            justify-content: space-around;
        }

            .sd-footer-tag .left {
                width: 20%;
                display: flex;
                text-align: left;
            }

                .sd-footer-tag .left img {
                    height: 30px;
                    width: 30px;
                    padding: 5px;
                    cursor: pointer;
                }

            .sd-footer-tag .middle {
                width: 60%;
                height: 25%;
                justify-content: center;
                display: flex;
                align-items: center;
            }

                .sd-footer-tag .middle .border-r {
                    border-right: 1px solid silver;
                }

                .sd-footer-tag .middle p {
                    margin: 0;
                    font-size: 13px;
                    padding-left: 10px;
                    padding-right: 10px;
                    font-weight: 400;
                    color: #181818;
                    cursor: pointer;
                }

                .sd-footer-tag .middle .color {
                    color: #2f3293;
                }

                .sd-footer-tag .middle .color {
                    color: #2f3293;
                }

                .sd-footer-tag .middle p {
                    margin: 0;
                    font-size: 13px;
                    padding-left: 10px;
                    padding-right: 10px;
                    font-weight: 400;
                    color: #181818;
                    cursor: pointer;
                }

            .sd-footer-tag .right {
                width: 20%;
                text-align: right;
                font-size: 13px;
                cursor: pointer;
            }

                .sd-footer-tag .right span {
                    font-weight: 600;
                    margin-left: 5px;
                }

    </style>




    <div class="sd-visitors">
        <div class="left">
            <p>
                Total Visitors
                <span>@totalvisitors</span>
            </p>
        </div>
        <div class="right">
            <p>
                Todays Visitors
                <span>@todaystotalvisitors</span>
            </p>
        </div>
    </div>

    <div class="sd-footer-bottom"><img src="@footerimages.MediaUrl()" alt=""></div>





    <div class="sd-footer-tag">
        <div class="left">
            @if (footerlogosimage!=null)
            {
                foreach (var item in footerlogosimage)
                {
                    var socialimage = item.Content.Value<MediaWithCrops>("logos");
                    <img src="@socialimage.MediaUrl()" alt="icon">
                }
            }
           
        </div>
        <div class="middle">
            <p class="border-r">@Html.Raw(footercopyright)</p>
            <a href="@footerprivacy.Url" class="border-r">@footerprivacy.Name</a>&nbsp;&nbsp;
            <a href="@footertermsandconditions.Url" class="border-r">@footertermsandconditions.Name</a>
            
        </div>
        <div class="right"> <a href="@footerdevelopedbycodedream.Url" class="border-r">@footerdevelopedbycodedream.Name</a></div>
    </div>













